#where to log
{% if ansible_os_family == "RedHat" %}
logpath=/var/log/mongo/mongoc.log
# fork and run in background
fork = true
{% endif %}
{% if ansible_os_family == "Debian" %}
logpath=/var/log/mongodb/mongoc.log
# fork and run in background
fork = false
{% endif %}
logappend=true

port = {{ mongoc_port }}

dbpath={{ mongoc_datadir_prefix }}/configdb
keyFile={{ mongoc_datadir_prefix }}/secret
# location of pidfile
pidfilepath = {{ mongoc_datadir_prefix }}/mongoc.pid

configsvr=true
